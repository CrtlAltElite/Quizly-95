<%- include('../partials/header.ejs') %>

<main class="container">
    <h1 class="my-4"> Quizly - Dashboard</h1>
    <div class="d-flex justify-center-between align-items-center mt-5 mb-3">
        <h2 class="my-2">Your Submissions</h2>
        <a href="/quiz/create" class="btn btn-primary">Create Quiz</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Quiz</th>
                <th scope="col">Score</th>
            </tr>
        </thead>
        <tbody>
            <% for (const sub of user.submissions){ %>
                <tr>
                    <td>
                        <a href="/quiz/results/<%= sub.id %>"><strong><%= sub.quiz.title %></strong></a> 
                        <br>
                        <small><%= sub.quiz.description %></small>
                    </td>
                </tr>
            <% } %>
        </tbody>

    </table>
</main>

<%- include('../partials/footer.ejs') %>
